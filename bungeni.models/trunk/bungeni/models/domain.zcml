<?xml version="1.0"?>
<configure
 xmlns="http://namespaces.zope.org/zope">

  <class class=".domain.Committee">
    <require permission="zope.Public" attributes="files"/>
  </class>
  
  <class class=".domain.Bill">
    <require permission="zope.Public" attributes="files"/>
    <require permission="bungeni.bill.View"
             interface=".interfaces.IBill" />
    <require permission="bungeni.bill.Edit"
             set_schema=".interfaces.IBill" />    
  </class>
  
  <class class=".domain.Response">
    <require permission="zope.Public" attributes="files"/>
  </class>    

  <class class=".domain.Question">
    <require permission="zope.Public" attributes="files"/>  
    <require permission="bungeni.question.View"
             interface=".interfaces.IQuestion" />
    <require permission="bungeni.question.Edit"
             set_schema=".interfaces.IQuestion" />
  </class>             

  <class class=".domain.Motion">
    <require permission="bungeni.motion.View"
             interface=".interfaces.IMotion" />
    <require permission="bungeni.motion.Edit"
             set_schema=".interfaces.IMotion" />
  </class>             


</configure>

