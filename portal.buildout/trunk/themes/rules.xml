<?xml version="1.0" encoding="UTF-8"?>
<ruleset>
  <theme href="/themes/layout.html" />

  <server-settings>
    <server>127.0.0.1:8000</server>
  </server-settings>
  
  <rule>
    <replace content="children:head" theme="children:head" />
  </rule>
  
  <rule>
    <!-- replace the title -->
    <replace content="children:title" theme="children:h1" />
    <replace content="#visual-portal-wrapper" theme="#content" />
  </rule>
  
</ruleset>
