<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/@@standard_macros/page">
    <div metal:fill-slot="body" i18n:domain="bungeni" class="report_body">
        <a tal:attributes="href view/back_link"> back to calendar </a>
        <div class="report_mainTitle">
                 <span tal:content="view/doc_type"/> 
        </div>
        <tal:loop tal:repeat="item view/sitting_items">
            <div class="report_title">      
                  <span tal:replace="view/group/short_name"/> Parliament : <span tal:content="item/sitting_type/sitting_type"/> Sitting
            </div> 
            <div class="report_date">Date : <span tal:content="python:item.start_date.strftime('%A %d %B %Y')" />
            </div>   
            <tal:loop tal:repeat="scheduled item/item_schedule">
                <div class="report_items">
                        <span tal:condition="python:scheduled.item.type == 'motion'" >
                            <span tal:condition="view/motion">
                            <h2><span tal:replace="python:scheduled.item.type.capitalize()" /> : <span tal:replace="scheduled/item/short_name" /></h2>
                             </span>
                             <span tal:condition="scheduled/item/owner/first_name | nothing">
                                <h3> From <span tal:replace="scheduled/item/owner/first_name" /> 
                                <span tal:replace="scheduled/item/owner/last_name" tal:condition="scheduled/item/owner/last_name | nothing" /> </h3>
                             </span>
                        <p tal:content="structure scheduled/item/body_text" tal:condition="view/motion_text" />
                    </span>
                    <span tal:condition="python:scheduled.item.type == 'bill'">
                        <span tal:condition="view/bill">
                            <h2> <span tal:replace="python:scheduled.item.type.capitalize()" /> : <span tal:replace="scheduled/item/short_name"/></h2>  <span tal:condition="scheduled/item/owner/first_name | nothing">
                                <h3> From <span tal:replace="scheduled/item/owner/first_name" /> 
                                <span tal:replace="scheduled/item/owner/last_name" tal:condition="scheduled/item/owner/last_name | nothing" /> </h3>
                             </span>
                            <p tal:content="structure scheduled/item/body_text" tal:condition="view/bill_text"/>
                        </span>
                    </span>
                    <span tal:condition="python:scheduled.item.type == 'question'" >
                        <span tal:condition="view/question">
                            <h2> <span tal:replace="python:scheduled.item.type.capitalize()" />:<span tal:replace="scheduled/item/short_name"/></h2>
                            <span tal:condition="view/question_owner">
                                
                                <h3> From <span tal:replace="scheduled/item/owner/first_name" /> 
                                <span tal:replace="scheduled/item/owner/last_name" />  
                                <span tal:condition="scheduled/item/ministry | nothing"> to <span tal:replace="scheduled/item/ministry/full_name"/></span></h3>
                             </span>
                             <span tal:condition="view/question_summary">
                                <h3>Summary</h3>
                                <p tal:content="structure scheduled/item/body_text"/>
                             </span>
                             <span tal:condition="view/question_text">
                                <p tal:content="structure scheduled/item/body_text" />
                             </span>
                        </span>
                    </span>
                    <span tal:condition="python:scheduled.item.type == 'agenda'">
                        <span tal:condition="view/agenda">
                            
                        <h2> <span tal:replace="python:scheduled.item.type.capitalize()" /> : <span tal:replace="scheduled/item/short_name" /></h2>
                        <span tal:condition="scheduled/item/owner/first_name | nothing">
                                <h3> From <span tal:replace="scheduled/item/owner/first_name" /> 
                                <span tal:replace="scheduled/item/owner/last_name" tal:condition="scheduled/item/owner/last_name | nothing" /> </h3>
                             </span>
                        <p tal:content="structure scheduled/item/body_text" tal:condition="view/agenda_text"/>   
                        </span>
                    </span>
                    <!-- <p tal:content="structure scheduled/discussion/body_text" tal:condition="view/display_minutes" />
                    <span tal:condition="view/display_minutes"/>
                    <p tal:content="structure scheduled/discussion/body_text"/> -->
                </div>
            </tal:loop>          
        </tal:loop>
        <a tal:attributes="href view/back_link"> back to calendar </a>
    </div>
</html>  
