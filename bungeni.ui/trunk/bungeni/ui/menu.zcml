<?xml version="1.0"?>
<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
	   xmlns:z3c="http://namespaces.zope.org/z3c"
           i18n_domain="bungeni">

  <browser:menu
     id="context_actions"
     title="Context Actions"
     />

  <browser:menuItem
     for="ore.alchemist.interfaces.IAlchemistContainer"
     menu="context_actions"
     title="Listing"
     action="index"
     />

  <browser:menuItem
     menu="site_actions"
     for="*"
     action="/workspace"
     title="Workspace"
     />

  <!--browser:menuItem
     menu="site_actions"
     for="*"
     action="/committees"
     title="Committees"
     /-->

  <browser:menuItem
     menu="site_actions"
     for="*"
     action="/parliament"
     title="Parliaments"
     />

  <!--browser:menuItem
     menu="site_actions"
     for="*"
     action="/governments"
     title="Governments"
     /-->

  <browser:menuItem
     menu="site_actions"
     for="*"
     action="/bills"
     title="Bills"
     />

  <browser:menuItem
     menu="site_actions"
     for="*"
     action="/motions"
     title="Motions"
     />

  <browser:menuItem
     menu="site_actions"
     for="*"
     action="/questions"
     title="Questions"
     />

  <browser:menuItem
     menu="site_actions"
     for="*"
     action="/search"
     title="Search"
     />
     
   <browser:menuItem
     menu="context_actions"
     for="ore.alchemist.interfaces.IAlchemistContent"
     action="view"
     title="View"
     />

   <browser:menuItem
     menu="context_actions"
     for="ore.alchemist.interfaces.IAlchemistContent"
     action="edit"
     title="Edit"
     />

   <browser:menuItem
     menu="context_actions"
     for="bungeni.models.interfaces.IFileAttachments"
     action="files/"
     title="Files"
     />

   <browser:menuItem
     menu="context_actions"
     for="bungeni.core.interfaces.IAuditable"
     action="audit-log"
     title="Audit Log"
     />  

   <browser:menuItem
     menu="context_actions"
     for="bungeni.core.interfaces.IVersionable"
     action="versions"
     title="Versions"
     />  
     
   <browser:menuItem
     menu="context_actions"
     for="bungeni.models.interfaces.IBungeniContent"
     action="similar"
     title="Similar"
     />       
     
   <browser:menuItem
     menu="context_actions"
     for="bungeni.models.interfaces.IBungeniContent"
     action="workflow"
     title="Workflow"
     />           
     
   <browser:viewlet
     name="login"
     for="*"
     class=".menu.LoginAction"
     manager="ploned.ui.interfaces.IPersonalBarMenu"
     permission="zope.Public"
     viewName="login"
     weight="20"
     />

   <browser:viewlet
     name="signup"
     for="*"
     class=".menu.LoginAction"
     manager="ploned.ui.interfaces.IPersonalBarMenu"
     permission="zope.Public"
     viewName="signup"
     weight="25"
     />

   <browser:viewlet
     name="dashboard"
     for="*"
     class=".menu.DashboardAction"
     manager="ploned.ui.interfaces.IPersonalBarMenu"
     permission="zope.Public"
     viewName="workspace"
     weight="10"
     />
     
   <browser:viewlet
     name="logout"
     for="*"
     class=".menu.LogoutAction"
     manager="ploned.ui.interfaces.IPersonalBarMenu"
     permission="zope.Public"
     viewName="logout"
     weight="20"
     />

   <browser:viewlet
     name="settings"
     for="*"
     class=".menu.LogoutAction"
     manager="ploned.ui.interfaces.IPersonalBarMenu"
     permission="zope.Public"
     viewName="user-settings"
     weight="25"
     />

   <browser:viewlet
     name="admin"
     for="*"
     class=".menu.AdminAction"
     manager="ploned.ui.interfaces.IPersonalBarMenu"
     permission="zope.ManageSite"
     viewName=""
     weight="30"
     />

   <!-- task actions -->

   <browser:menu
      id="task_actions"
      title="Tasks"
      class=".menu.TaskMenu"
      />
   
   <browser:menuItem
      menu="task_actions"
      for="*"
      action="/motions/add"
      title="Create motion"
      />
   
   <browser:menuItem
      menu="task_actions"
      for="*"
      action="/questions/add"
      title="Create question"
      />
   
   <browser:menuItem
      menu="task_actions"
      for="*"
      action="/bills/add"
      title="Create bill"
      />

</configure>

