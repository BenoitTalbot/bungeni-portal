<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/@@standard_macros/page">
  
  <div metal:fill-slot="body" i18n:domain="bungeni">
  <div id="whats-on-overview" >
    <h1> <a href="/business" i18n:translate="">What's on</a></h1>
    <p i18n:translate="" class="documentDescription">
      An overview of the daily operations of the parliament.
    </p>
    <br/>
    <p>
    From: <span tal:replace="view/get_start_date" />
    <span class="spacer"> &nbsp; &nbsp; </span>
    to: <span tal:replace="view/get_end_date" />
    </p>
    <dl class="portlet" tal:define="days view/get_sittings" tal:condition="days" >
        <dt i18n:translate=""> Upcoming sittings </dt>
        <dd>
            <ul>
              <tal:block tal:repeat="day days">
                  <li tal:content="day/day" /> 
              <ul tal:define="sittings day/sittings" >
                <li tal:repeat="sitting sittings">
                  <a tal:attributes="href sitting/url">
                    <span tal:content="sitting/start" /> 
                    -
                    <span tal:content="sitting/end" /> 
                    (<span tal:content="sitting/type" />)
                    <span tal:content="sitting/name" /> 
                  </a>                        
                </li>
              </ul>  
             </tal:block>                                                    
            </ul>
        </dd>
    </dl>
    <dl class="portlet" tal:define="days view/get_bills" tal:condition="days" >
        <dt i18n:translate=""> Bills </dt>
        <dd>
            <ul >
              <tal:block tal:repeat="day days">
                  <li tal:content="day/day" /> 
              <ul tal:define="items day/items" >
                <li tal:repeat="item items">
                    <a tal:attributes="href item/url">
                      <span tal:content="item/name" />    
                      (<span tal:content="item/status" />)                      
                    </a>
                    <span tal:content="item/group_type" />                        
                    <span tal:content="item/group_name" />  
                    <span tal:content="item/sitting_type" />                                                
                </li>
              </ul>  
            </tal:block>                                                     
            </ul>
        </dd>
    </dl>
    <dl class="portlet" tal:define="days view/get_motions" tal:condition="days" >
        <dt i18n:translate=""> Motions </dt>
        <dd>
            <ul>
              <tal:block tal:repeat="day days">
                  <li tal:content="day/day" /> 
                  <ul tal:define="items day/items" >
                    <li tal:repeat="item items">
                      <a tal:attributes="href item/url">
                          <span tal:content="item/name" />    
                          (<span tal:content="item/status" />)                                                
                        </a>                    
                        <span tal:content="item/group_type" />                        
                        <span tal:content="item/group_name" />       
                        <span tal:content="item/sitting_type" />                                                                                           
                    </li>
                  </ul>   
               </tal:block>                          
            </ul>
        </dd>
    </dl>
    <dl class="portlet" tal:define="days view/get_questions" tal:condition="days" >
        <dt i18n:translate=""> Questions </dt>
        <dd>
            <ul >
              <tal:block tal:repeat="day days">
                  <li tal:content="day/day" /> 
              <ul tal:define="items day/items" >
                <li tal:repeat="item items">
                   <a tal:attributes="href item/url">
                      <span tal:content="item/name" />    
                      (<span tal:content="item/status" />)                      
                    </a>                  
                    <span tal:content="item/group_type" />                        
                    <span tal:content="item/group_name" />     
                    <span tal:content="item/sitting_type" />                                                                                             
                </li>
               </ul> 
             </tal:block>                                                                  
            </ul>
        </dd>
    </dl> 
  </div>     
  </div>
</html>
