<dl class="portlet portletNavigationTree">
  
  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <a class="tile">
      Bungeni Portal
    </a>
    <span class="portletTopRight"></span>
  </dt>
  
  <dd class="portletItem lastItem">
    
    <tal:ignore condition="False">
      <metal:subtree define-macro="subtree">
        <tal:block define="is_folderish exists: node/node">
          
          <li class="navTreeItem visualNoMarker">
            <div>
              <a tal:attributes="href node/url">
                <span tal:content="node/name" />
              </a>
            </div>
            
            <ul tal:condition="is_folderish"
                tal:attributes="class string:navTree navTreeLevel${nesting_level}">
              <tal:nesting define="nesting_level python: nesting_level + 1">
                <tal:children repeat="node node/node">
                  <div metal:use-macro="template/macros/subtree" />
                </tal:children>
              </tal:nesting>
            </ul>
          </li>
          
        </tal:block>
      </metal:subtree>
    </tal:ignore>
    
    <ul tal:define="global nesting_level python: 0">
      <tal:node tal:repeat="node view/nodes">
        <li metal:use-macro="template/macros/subtree" />
      </tal:node>
    </ul>
    
  </dd>
  
</dl>

